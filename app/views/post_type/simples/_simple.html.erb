<%= turbo_frame_tag simple do %>
  <div class="w-full bg-white shadow-md rounded-lg ring-1 ring-black ring-opacity-5">
    <div class="p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0 pt-0.5">
          <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2.2&w=160&h=160&q=80" alt="">
        </div>
        <div class="ml-3 flex-1">
          <div class="flex flex-col flex-wrap">
            <div class="mb-3">
              <div class="flex flex-col flex-wrap">
                <p class="font-medium text-gray-900">
                  <%= current_user.nickname %> 
                </p>
                <p class="text-sm font-medium text-gray-700">
                  <%= current_user.username %> - <%= distance_of_time_in_words(Time.now, simple.created_at) %>
                </p>
              </div>
            </div>
            <div class="mx-3">
              <%= simple.content %>
            </div>
            <div class="mt-3">
              <div class="flex">
                <%= turbo_frame_tag "like_simple_#{simple.id}" do %>
                  <%= form_with(model: PostLike.new, url: simple_likes_path(simple_id: simple.id)) do |f| %>
                    <%= button_tag class: "py-1 px-2 uppercase inline-flex shadow-md text-gray-700 border rounded-lg hover:text-red-600 hover:shadow-xl" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                  <% end %>
                <% end %>
                <%= button_to "edit", edit_simple_path(simple), data: { turbo: false }, class: "ml-3 py-1 px-2 uppercase inline-flex shadow-md font-semibold text-sm text-gray-700 border rounded-lg hover:text-gray-900 hover:shadow-xl" %>
                <%= button_to "delete", simple_path(simple), method: :delete, data: { controller:  "confirmation", "confirmation-message-value": "Are you sure?", action: "click->confirmation#confirm" }, class: "ml-3 py-1 px-2 uppercase inline-flex shadow-md font-semibold text-sm text-gray-700 border rounded-lg hover:text-gray-900 hover:shadow-xl" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
