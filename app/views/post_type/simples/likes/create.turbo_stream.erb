<% if @resource.valid? %>
  <%= turbo_stream.replace "like_simple_#{@simple}" do %>
    <%= turbo_frame_tag "like_simple_#{@simple}" do %>
      <%= render partial: "post_type/simples/likes/dislike", locals: { resource: @resource, simple: @simple } %>
    <% end %>
  <% end %>
<% else %>
  <%= turbo_stream.append "flash" do %>
    <%= render partial: "layouts/shared/flash", locals: { flash: { error: ""} } %>
  <% end %>
<% end %>