<% if @resource.valid? %>
  <%= turbo_stream.replace "simples_form" do %>
    <%= render partial: "post_type/simples/form", locals: { simple: PostType::Simple.new } %>
  <% end %>

  <%= turbo_stream.prepend "posts" do %>
    <%= render partial: "posts/post", locals: { post: @resource.post } %>
  <% end %>

  <%= turbo_stream.append "flash" do %>
    <%= render partial: "layouts/shared/flash", locals: { flash: { notice: ""} } %>
  <% end %>
<% else %>PostType::Simple_38
  <%= turbo_stream.replace "simples_form" do %>
    <%= render partial: "post_type/simples/form", locals: { simple: @resource } %>
  <% end %>
