<!DOCTYPE html>
<html class="h-full bg-gray-100">
  <head>
    <title>Spotifyme</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body class="h-full">
    <%= turbo_frame_tag "flash" do %>
      <%= render partial: "layouts/shared/flash" %>
    <% end %>
    <div class="min-h-full">
      <div class="bg-gray-800 pb-32">
        <% if current_user %>
          <%= render partial: 'layouts/navbar' %>
        <% end %>
        <header class="py-10">
          <div class="flex items-center max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex-shrink-0">
              <% if current_visited %>
                <%= render(HeaderTitleComponent.new(title: current_visited.nickname, subtitle: current_visited.username)) %>
              <% elsif current_user %>
                <%= render(HeaderTitleComponent.new(title: current_user.nickname, subtitle: current_user.username)) %>
              <% else %>
                <%= render(HeaderTitleComponent.new(title: 'Spotifyme')) %>
              <% end %>
            </div>
            <div class="flex-1">
            </div> 
            <div class="flex-shrink-0">
              <%= turbo_frame_tag 'follow_invitation_form' do %>
                <% if current_user && !current_user.follow(current_visited) %>
                  <%= render(HeaderInviteComponent.new(current_visited: current_visited, status: 'add')) %>
                <% elsif current_user && current_user.follow(current_visited).accepted? %>
                  <%= render(HeaderInviteComponent.new(current_visited: current_visited, status: 'following', deactivated: true)) %>
                <% else %>
                  <%= render(HeaderInviteComponent.new(current_visited: current_visited, status: 'sent', deactivated: true)) %>
                <% end %>
              <% end %>
            </div>    
          </div>
        </header>
      </div>
      <main class="-mt-32">
        <div class="max-w-7xl mx-auto pb-12 px-4 sm:px-6 lg:px-8">
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
