<% if @resource.valid? %>
  <%= turbo_stream.replace "user_#{@resource.id}" do %>
    <%= render partial: "posts/post", locals: { post: @resource.post } %>
  <% end %>

  <%= turbo_stream.append "flash" do %>
    <%= render partial: "layouts/shared/flash", locals: { flash: { notice: ""} } %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "user_#{@resource.id}" do %>
    <%= render partial: "posts/users/edit", locals: { post: @resource } %>
  <% end %>
  
  <%= turbo_stream.append "flash" do %>
    <%= render partial: "layouts/shared/flash", locals: { flash: { error: ""} } %>
  <% end %>
<% end %>