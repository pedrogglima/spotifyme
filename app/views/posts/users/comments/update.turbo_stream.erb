<% if @resource.valid? %>
  <%= turbo_stream.replace @resource do %>
    <%= render partial: "posts/users/comments/comment", locals: { comment: @resource } %>
  <% end %>

  <%= turbo_stream.append "flash" do %>
    <%= render partial: "layouts/shared/flash", locals: { flash: { notice: ""} } %>
  <% end %>
<% else %>
  <%= turbo_stream.replace @resource do %>
    <%= render partial: "posts/users/comments/edit", locals: { comment: @resource } %>
  <% end %>
  
  <%= turbo_stream.append "flash" do %>
    <%= render partial: "layouts/shared/flash", locals: { flash: { error: ""} } %>
  <% end %>
<% end %>