<%= turbo_frame_tag "posts_#{post.polymorphic_class_name}_#{post.postable_id}" do %>
  <% if ar %>
    <div class="w-full bg-white shadow-md rounded-lg ring-1 ring-black ring-opacity-5">
  <% else %>
    <div
      data-controller="list-new-item"
      class="w-full bg-white shadow-md rounded-lg ring-1 ring-black ring-opacity-5"
    >
  <% end %>
    <div class="p-4">
      <div class="flex items-start">

        <div class="flex-shrink-0 pt-0.5">
          <% if ar %>
            <%= render(AvatarComponent.new(user: post.user_avatar, username: post.user_name)) %>
          <% else %>
            <%= render(AvatarComponent.new(user: post.user, username: post.user.username)) %>
          <% end %>
        </div>

        <div class="ml-3 flex-1 ">
          <div class="flex flex-col flex-wrap">
            <div class="mb-3">
              <div class="flex flex-col flex-wrap">
                <p class="font-medium text-gray-900">
                  <%= ar ? post.user_nickname : post.user.nickname %>
                </p>
                <p class="text-sm font-medium text-gray-700">
                  <%= ar ? post.user_name : post.user.username %> - <%= distance_of_time_in_words(Time.now, post.created_at) %>
                </p>
              </div>
            </div>
            <div class="mx-3 break-all">
              <p><%= ar ? post.posts_user_content : post.postable.content %></p>
            </div>
            <div>
              <div class="flex min-h-min h-4 mb-3">
                <%= turbo_frame_tag "likes_#{ar ? post.posts_user_id : post.postable.id}" do %>
                  <%= render(LikesCounterComponent.new(counter: ar ? post.posts_user_counter_likeable : post.postable.counter_likeable)) %>
                <% end %>
              </div>
              <div class="flex pt-2 border-t">
                <%= turbo_frame_tag "like_user_#{ar ? post.posts_user_id : post.postable.id}" do %>
                  <% if (ar ? post.like_id : post.postable.like_id).present? %>
                    <%= render partial: "likes/dislike", locals: { resource: post } %>
                  <% else %>
                    <%= render partial: "likes/like", locals: { likeable_type: post.postable_type, likeable_id: post.postable_id } %>
                  <% end %>
                <% end %>
                <%= link_to "comments", comments_path(commentable_type: post.postable_type, commentable_id: post.postable_id),  data: { turbo: false }, class: "ml-3 py-1 px-2 uppercase inline-flex shadow-md font-semibold text-sm text-gray-700 border rounded-lg hover:text-gray-900 hover:shadow-xl" %>
              </div>
            </div>
          </div>
        </div>

        <div class="flex-shrink-0 pt-0.5">
          <% if current_user_profile? %>
            <%= render(VerticalMenuComponent.new(links: [
              { link: link_to("edit", edit_posts_user_path(ar ? post.posts_user_id : post.postable.id), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100") },
              { link: button_to("delete", posts_user_path(ar ? post.posts_user_id : post.postable.id), method: :delete, data: { controller:  "confirmation", "confirmation-message-value": "Are you sure?", action: "click->confirmation#confirm" }, class: "block px-4 py-2 text-sm text-gray-700", form_class: "hover:bg-gray-100") }
            ])) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>