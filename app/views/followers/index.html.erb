<div class="bg-white rounded-lg shadow px-5 py-6 sm:px-6">
  <div class="flex flex-col space-y-4">
    <% if @followers.present? %>
      <%= render(partial: "follower", collection: @followers) %>

      <%== pagy_nav(@pagy) %>
    <% else %>
      <%= render(InformativeComponent.new(title: 'No followers', 
                                          text: "You may find new followers by following new people!",
                                          button: LinkIconComponent.new(title: 'Start Following', 
                                                                        url: search_path, 
                                                                        icon: 'search'))) %>
    <% end %>
  </div>
</div>