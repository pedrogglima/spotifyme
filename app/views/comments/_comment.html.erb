<%= turbo_frame_tag "comment_#{comment.polymorphic_class_name}_#{comment.id}" do %>
  <div class="w-full bg-white shadow-md rounded-lg ring-1 ring-black ring-opacity-5">
    <div class="p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0 pt-0.5">
          <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2.2&w=160&h=160&q=80" alt="">
        </div>
        
        <div class="ml-3 flex-1">
          <div class="flex flex-col flex-wrap">
            <div class="mb-3">
              <div class="flex flex-col flex-wrap">
                <p class="font-medium text-gray-900">
                  <%= comment.user_nickname %> 
                </p>
                <p class="text-sm font-medium text-gray-700">
                  <%= comment.user_name %> - <%= distance_of_time_in_words(Time.now, comment.created_at) %>
                </p>
              </div>
            </div>
            <div class="mx-3 break-all">
              <p><%= comment.content %></p>
            </div>
            <div class="mt-3">
              <div class="flex mb-1">
                <%= turbo_frame_tag "likes_#{comment.id}" do %>
                  <%= render(LikesCounterComponent.new(counter: comment.counter_likeable)) %>
                <% end %>
              </div>
              <div class="flex pt-2 border-t">
                <%= turbo_frame_tag "like_comment_#{comment.id}" do %>
                  <% if comment.like_id.present? %>
                    <%= render partial: "likes/dislike", locals: { resource: comment.like_id } %>
                  <% else %>
                    <%= render partial: "likes/like", locals: { likeable_type: comment.class.name, likeable_id: comment.id } %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="flex-shrink-0 pt-0.5">
          <% if current_user.id == comment.user_id %>
            <%= render(VerticalMenuComponent.new(links: [
              { link: link_to("edit", edit_comment_path(comment), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100") },
              { link: button_to("delete", comment_path(comment), method: :delete, data: { controller:  "confirmation", "confirmation-message-value": "Are you sure?", action: "click->confirmation#confirm" }, class: "block px-4 py-2 text-sm text-gray-700", form_class: "hover:bg-gray-100") }
            ])) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
