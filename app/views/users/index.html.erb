<%= turbo_frame_tag 'search_users' do %>
  <% if @user.present? %>
    <div class="bg-white shadow-md hover:shadow-lg rounded-lg ring-1 ring-black ring-opacity-5">
      <%= link_to profile_path(user_id: @user.id), data: { turbo: false } do %>
        <div class="p-4">
          <div class="flex items-center">
            <div>
              <%= render(AvatarComponent.new(user: @user, username: @user.username)) %>
            </div>
            <div class="ml-3">
              <p class="text-md font-medium text-gray-700 group-hover:text-gray-900">
                <%= @user.nickname %>
              </p>
              <p class="text-sm mb-1 font-medium text-gray-600 group-hover:text-gray-900">
                <%= @user.username %>
              </p>
              <p class="text-xs font-medium text-gray-500 group-hover:text-gray-700">
                View profile
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% elsif @spotify_user %>
    <!--Would you like to send him an invitation email to join the community? -->
    <%= render(InformativeComponent.new(title: 'User found only on Spotify!', text: "Unfortunately we can't reach the user, right now."))%>
  <% else %>
    <%= render(InformativeComponent.new(title: 'User not found!', text: "Unfortunately we didn't find a user with that name on Spotify."))%>
  <% end %>
<% end %>